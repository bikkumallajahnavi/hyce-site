<style>
  .site-footer {
    background: var(--color-navy);
    color: rgba(255, 255, 255, 0.7);
  }

  .footer-top {
    padding: 80px 0 48px;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 1.5fr 1fr 1fr 1.2fr;
    gap: 48px;
  }

  .footer-logo {
    height: 48px;
    width: auto;
    margin-bottom: 20px;
  }

  .footer-desc {
    font-size: 0.9rem;
    line-height: 1.7;
    margin-bottom: 24px;
  }

  .footer-socials {
    display: flex;
    gap: 12px;
  }

  .social-icon {
    width: 40px;
    height: 40px;
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: rgba(255, 255, 255, 0.5);
    transition: all 0.3s ease;
  }

  .social-icon svg {
    width: 18px;
    height: 18px;
  }

  .social-icon:hover {
    border-color: var(--color-gold);
    color: var(--color-gold);
    background: rgba(201, 168, 76, 0.1);
  }

  .footer-links h4,
  .footer-contact h4 {
    font-family: var(--font-heading);
    color: var(--color-white);
    font-size: 1.1rem;
    margin-bottom: 20px;
  }

  .footer-links {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .footer-links a {
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.6);
    transition: var(--transition);
  }

  .footer-links a:hover {
    color: var(--color-gold);
    padding-left: 6px;
  }

  .footer-contact {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .contact-item {
    display: flex;
    align-items: flex-start;
    gap: 12px;
  }

  .contact-item svg {
    width: 18px;
    height: 18px;
    flex-shrink: 0;
    color: var(--color-gold);
    margin-top: 2px;
  }

  .contact-item p {
    font-size: 0.85rem;
    line-height: 1.5;
    margin: 0;
  }

  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.08);
    padding: 20px 0;
  }

  .footer-bottom-inner {
    text-align: center;
    font-size: 0.78rem;
    color: rgba(255, 255, 255, 0.3);
  }

  /* Tablet landscape */
  @media (max-width: 1024px) {
    .footer-grid {
      grid-template-columns: 1.5fr 1fr 1fr;
      gap: 36px;
    }

    .footer-contact {
      grid-column: 1 / -1;
    }

    .footer-top {
      padding: 60px 0 40px;
    }
  }

  /* Mobile */
  @media (max-width: 768px) {
    .hide-mobile {
      display: none;
    }

    .footer-top {
      padding: 24px 0 16px;
    }

    .footer-grid {
      grid-template-columns: 1fr;
      gap: 0;
    }

    .footer-brand {
      text-align: center;
    }

    .footer-logo {
      height: 32px;
      margin: 0 auto 10px;
    }

    .footer-desc {
      display: none;
    }

    .footer-socials {
      justify-content: center;
      gap: 20px;
      margin-bottom: 16px;
    }

    .social-icon {
      width: 38px;
      height: 38px;
      border-color: rgba(201, 168, 76, 0.25);
      color: var(--color-gold);
    }

    .social-icon svg {
      width: 16px;
      height: 16px;
    }

    .footer-contact {
      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
      justify-content: center;
      gap: 4px 16px;
      padding: 0;
    }

    .footer-contact h4 {
      display: none;
    }

    .contact-item {
      flex-direction: row;
      align-items: center;
      gap: 0;
    }

    .contact-item svg {
      display: none;
    }

    .contact-item p {
      font-size: 0.68rem;
      color: rgba(255, 255, 255, 0.35);
      line-height: 1.3;
    }

    .contact-item p br {
      display: none;
    }

    .footer-bottom {
      padding: 10px 0;
      border-top: 1px solid rgba(255, 255, 255, 0.05);
    }

    .footer-bottom-inner {
      font-size: 0.62rem;
      color: rgba(255, 255, 255, 0.2);
    }
  }
</style>
