---
import BaseLayout from '../layouts/BaseLayout.astro';

const benefits = [
  {
    title: 'Growth Opportunities',
    description: 'Work on major projects like Microsoft, Amazon, and Google campuses. Build your career alongside the biggest names in the industry.',
    icon: 'growth',
  },
  {
    title: 'Skilled Team',
    description: 'Join a team of experienced managers, engineers and supervisors who collaborate with precision and dedication.',
    icon: 'team',
  },
  {
    title: 'Diverse Projects',
    description: 'From civil construction to hardscape, landscape to external development â€” gain experience across multiple domains.',
    icon: 'projects',
  },
  {
    title: 'Stable Employment',
    description: '18+ years of successful operations with a growing portfolio of clients and projects across Hyderabad.',
    icon: 'stable',
  },
];
---

<BaseLayout title="Careers" description="Join HYCE Engineers & Infra team. Explore career opportunities in civil construction, engineering, and project management.">
  <!-- Page Banner -->
  <section class="page-banner">
    <div class="banner-overlay"></div>
    <div class="container banner-content">
      <span class="section-label" style="color: var(--color-gold);">Careers</span>
      <h1>Join Our Team</h1>
      <p>Build your career while building the future</p>
    </div>
  </section>

  <!-- Intro -->
  <section class="careers-intro">
    <div class="container intro-grid">
      <div class="intro-image">
        <img src="/images/team/team-site.jpg" alt="HYCE Engineers team on construction site" loading="lazy" />
      </div>
      <div class="intro-content">
        <span class="section-label">Join Our Team</span>
        <h2 class="section-title">We're always looking for talented professionals.</h2>
        <p class="section-text">
          We have a wealth of experience working as main building contractors on all kinds of projects, big and small, from home maintenance and improvements to extensions, refurbishments and new builds.
        </p>
        <p class="section-text" style="margin-top: 16px;">
          At HYCE, we believe our people are our greatest asset. We invest in training, provide opportunities for growth, and foster a collaborative environment where every team member can thrive and contribute to extraordinary projects.
        </p>
      </div>
    </div>
  </section>

  <!-- Why Join -->
  <section class="benefits-section">
    <div class="container">
      <div class="benefits-header">
        <span class="section-label">Why HYCE?</span>
        <h2 class="section-title" style="color: var(--color-white);">Why work with us</h2>
      </div>
      <div class="benefits-grid">
        {benefits.map((benefit, index) => (
          <div class="benefit-card">
            <div class="benefit-number">{String(index + 1).padStart(2, '0')}</div>
            <h3>{benefit.title}</h3>
            <p>{benefit.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Application Form -->
  <section class="application-section">
    <div class="container application-grid">
      <div class="application-info">
        <span class="section-label">Apply Now</span>
        <h2 class="section-title">Send your application to us</h2>
        <p class="section-text">
          We're looking for engineers, project managers, surveyors, supervisors, and skilled tradespeople. If you're passionate about construction and delivering excellence, we want to hear from you.
        </p>
        <div class="positions">
          <h4>We're hiring for:</h4>
          <ul>
            <li>
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>
              Civil Engineers
            </li>
            <li>
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>
              Project Managers
            </li>
            <li>
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>
              Site Supervisors
            </li>
            <li>
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>
              Landscape Architects
            </li>
            <li>
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>
              Geotechnical Surveyors
            </li>
            <li>
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>
              Skilled Tradespeople
            </li>
          </ul>
        </div>
      </div>

      <div class="application-form-wrapper">
        <form class="application-form" id="application-form">
          <div class="form-group">
            <label for="name">Your Name *</label>
            <input type="text" id="name" name="name" required placeholder="Full Name" />
          </div>
          <div class="form-group">
            <label for="email">Your Email *</label>
            <input type="email" id="email" name="email" required placeholder="email@example.com" />
          </div>
          <div class="form-group full-width">
            <label for="subject">Subject *</label>
            <input type="text" id="subject" name="subject" required placeholder="Application for Civil Engineer" />
          </div>
          <div class="form-group full-width">
            <label for="message">Your Message</label>
            <textarea id="message" name="message" rows="6" placeholder="Tell us about your experience, skills, and why you'd like to join HYCE..."></textarea>
          </div>
          <button type="submit" class="btn btn-primary full-width-btn">Submit Application</button>
        </form>
        <div class="form-success" id="form-success">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 11.08V12a10 10 0 11-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
          <p>Thank you for your application! Our team will review it and get back to you soon.</p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .page-banner {
    position: relative;
    height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    background: var(--color-navy);
    overflow: hidden;
  }

  .banner-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, var(--color-navy) 0%, var(--color-navy-light) 100%);
  }

  .banner-content {
    position: relative;
    z-index: 2;
  }

  .banner-content h1 {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    color: var(--color-white);
    margin-bottom: 12px;
  }

  .banner-content p {
    color: rgba(255, 255, 255, 0.6);
    font-size: 1.1rem;
  }

  /* ===== INTRO ===== */
  .careers-intro {
    padding: var(--section-padding);
  }

  .intro-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 64px;
    align-items: center;
  }

  .intro-image {
    aspect-ratio: 4/3;
  }

  .intro-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    background: var(--color-gray-200);
  }

  /* ===== BENEFITS ===== */
  .benefits-section {
    padding: var(--section-padding);
    background: var(--color-navy);
  }

  .benefits-header {
    text-align: center;
    margin-bottom: 64px;
  }

  .benefits-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 28px;
  }

  .benefit-card {
    padding: 40px;
    border: 1px solid rgba(255, 255, 255, 0.08);
    transition: var(--transition);
  }

  .benefit-card:hover {
    border-color: var(--color-gold);
    transform: translateY(-4px);
  }

  .benefit-number {
    font-family: var(--font-heading);
    font-size: 2.5rem;
    font-weight: 700;
    color: rgba(201, 168, 76, 0.2);
    margin-bottom: 12px;
    line-height: 1;
  }

  .benefit-card h3 {
    font-size: 1.2rem;
    color: var(--color-white);
    margin-bottom: 12px;
  }

  .benefit-card p {
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.5);
    line-height: 1.7;
  }

  /* ===== APPLICATION ===== */
  .application-section {
    padding: var(--section-padding);
  }

  .application-grid {
    display: grid;
    grid-template-columns: 1fr 1.2fr;
    gap: 64px;
  }

  .positions {
    margin-top: 32px;
  }

  .positions h4 {
    font-family: var(--font-body);
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--color-navy);
    margin-bottom: 16px;
  }

  .positions ul {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .positions li {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 0.9rem;
    color: var(--color-gray-600);
  }

  .positions svg {
    width: 18px;
    height: 18px;
    flex-shrink: 0;
    color: var(--color-gold);
  }

  .application-form {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    background: var(--color-gray-100);
    padding: 40px;
  }

  .form-group.full-width {
    grid-column: 1 / -1;
  }

  .form-group label {
    display: block;
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--color-navy);
    margin-bottom: 8px;
  }

  .form-group input,
  .form-group textarea {
    width: 100%;
    padding: 14px 16px;
    font-family: var(--font-body);
    font-size: 0.95rem;
    border: 1px solid var(--color-gray-200);
    background: var(--color-white);
    color: var(--color-gray-800);
    transition: var(--transition);
    outline: none;
  }

  .form-group input:focus,
  .form-group textarea:focus {
    border-color: var(--color-gold);
    box-shadow: 0 0 0 3px rgba(201, 168, 76, 0.1);
  }

  .form-group textarea {
    resize: vertical;
    min-height: 120px;
  }

  .full-width-btn {
    grid-column: 1 / -1;
    justify-content: center;
  }

  .form-success {
    display: none;
    text-align: center;
    padding: 48px 40px;
    background: var(--color-gray-100);
  }

  .form-success.visible {
    display: block;
  }

  .form-success svg {
    width: 48px;
    height: 48px;
    color: #22c55e;
    margin: 0 auto 16px;
  }

  .form-success p {
    color: var(--color-gray-600);
    font-size: 1rem;
    line-height: 1.6;
  }

  /* Mobile-first: 768px */
  @media (max-width: 768px) {
    .page-banner { height: auto; padding: 100px 0 40px; }
    .banner-content h1 { font-size: 1.8rem; }
    .banner-content p { font-size: 0.85rem; }
    .careers-intro, .benefits-section, .application-section { padding: 40px 0; }
    .intro-grid, .application-grid { grid-template-columns: 1fr; gap: 40px; }
    .intro-image { aspect-ratio: 16/9; }
    .benefits-grid { grid-template-columns: 1fr; gap: 20px; }
    .benefit-card { padding: 20px; transform: none; }
    .benefit-card:hover { transform: none; }
    .benefit-card h3 { font-size: 1.05rem; }
    .benefit-card p { font-size: 0.82rem; }
    .application-form { grid-template-columns: 1fr; padding: 20px; }
    .form-group label { font-size: 0.7rem; }
    .form-group input, .form-group textarea { font-size: 16px; padding: 14px 16px; }
    .positions li { font-size: 0.82rem; }
    .form-success { padding: 40px 20px; }
  }

  /* Mobile-first: 480px */
  @media (max-width: 480px) {
    .page-banner { padding: 80px 0 32px; }
    .banner-content h1 { font-size: 1.5rem; }
    .benefit-card { padding: 20px; }
    .benefit-number { font-size: 2rem; }
    .application-form { padding: 20px; }
    .form-success { padding: 32px 20px; }
  }
</style>

<script>
  const form = document.getElementById('application-form') as HTMLFormElement;
  const success = document.getElementById('form-success');

  form?.addEventListener('submit', (e) => {
    e.preventDefault();
    form.style.display = 'none';
    success?.classList.add('visible');
  });
</script>
