---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Home">
  <!-- Hero -->
  <section class="hero">
    <div class="hero-overlay"></div>
    <div class="hero-slides">
      <div class="hero-slide active" data-index="0">
        <div class="hero-bg" style="background-image: url('/images/projects/google-campus.png');"></div>
      </div>
      <div class="hero-slide" data-index="1">
        <div class="hero-bg" style="background-image: url('/images/projects/amazon-campus.jpg');"></div>
      </div>
      <div class="hero-slide" data-index="2">
        <div class="hero-bg" style="background-image: url('/images/projects/microsoft-building.jpg');"></div>
      </div>
    </div>
    <div class="container hero-content">
      <div class="hero-top-line"></div>
      <span class="hero-badge">Est. 2005</span>
      <h1 class="hero-title">We Build<br/><span class="gold-text">Landmarks</span></h1>
      <p class="hero-text">18+ years crafting iconic infrastructure â€” from Google & Amazon campuses to hospitals and commercial landmarks across Hyderabad.</p>
      <div class="hero-actions">
        <a href="/services/" class="hero-btn-primary">Explore Services <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14M12 5l7 7-7 7"/></svg></a>
        <a href="/about/" class="hero-btn-ghost">About HYCE</a>
      </div>
      <div class="hero-stats">
        <div class="hero-stat"><strong>30+</strong><span>Projects</span></div>
        <div class="hero-stat-divider"></div>
        <div class="hero-stat"><strong>15+</strong><span>Clients</span></div>
        <div class="hero-stat-divider"></div>
        <div class="hero-stat"><strong>98%</strong><span>Satisfaction</span></div>
      </div>
    </div>
    <div class="hero-dots">
      <button class="hero-dot active" data-slide="0"></button>
      <button class="hero-dot" data-slide="1"></button>
      <button class="hero-dot" data-slide="2"></button>
    </div>
  </section>

  <!-- Services -->
  <section class="services-overview">
    <div class="container">
      <div class="services-header">
        <span class="section-label">What We Offer</span>
        <h2 class="section-title">A one stop solution for all your civil engineering construction.</h2>
      </div>
      <div class="services-grid">
        <a href="/services/" class="service-card">
          <div class="service-icon"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M3 21h18M3 7v14M21 7v14M6 7V4l6-2 6 2v3M9 21v-4h6v4M9 10h.01M15 10h.01M9 14h.01M15 14h.01"/></svg></div>
          <div class="service-text"><h3>Civil Construction</h3><p>Buildings, commercial plants, pipe racks & bridges</p></div>
          <svg class="service-arrow" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
        </a>
        <a href="/services/" class="service-card">
          <div class="service-icon"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M12 3L2 12h3v8h6v-6h2v6h6v-8h3L12 3z"/></svg></div>
          <div class="service-text"><h3>External Development</h3><p>Natural stones, tiles, walls, roads & fencing</p></div>
          <svg class="service-arrow" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
        </a>
        <a href="/services/" class="service-card">
          <div class="service-icon"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M4 20h16M4 20V10l8-6 8 6v10M9 20v-4a3 3 0 016 0v4"/></svg></div>
          <div class="service-text"><h3>Hardscape</h3><p>Floorings, pathways, colored & wash concretes</p></div>
          <svg class="service-arrow" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
        </a>
        <a href="/services/" class="service-card">
          <div class="service-icon"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M12 22c4-4 8-7.5 8-12a8 8 0 10-16 0c0 4.5 4 8 8 12z"/><circle cx="12" cy="10" r="3"/></svg></div>
          <div class="service-text"><h3>Surveys</h3><p>Geotechnical investigation & topographical surveys</p></div>
          <svg class="service-arrow" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
        </a>
        <a href="/services/" class="service-card">
          <div class="service-icon"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M12 22c-4.97 0-9-2.69-9-6v-4c0 3.31 4.03 6 9 6s9-2.69 9-6v4c0 3.31-4.03 6-9 6z"/><path d="M12 16c-4.97 0-9-2.69-9-6V6c0 3.31 4.03 6 9 6s9-2.69 9-6v4c0 3.31-4.03 6-9 6z"/><ellipse cx="12" cy="6" rx="9" ry="4"/></svg></div>
          <div class="service-text"><h3>Landscape</h3><p>Green walls, irrigation, plants & plumbing</p></div>
          <svg class="service-arrow" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Company Profile -->
  <section class="company-profile">
    <div class="container profile-grid">
      <div class="profile-image">
        <div class="profile-img-wrapper">
          <img src="/images/hero/company-profile.png" alt="HYCE Engineers & Infra" loading="lazy" />
        </div>
        <div class="profile-exp">
          <span class="exp-number">18+</span>
          <span class="exp-text">Years</span>
        </div>
      </div>
      <div class="profile-content">
        <span class="section-label">Company Profile</span>
        <h2 class="section-title">Building excellence since 2005.</h2>
        <p class="section-text">We strive to stay up-to-date with the latest technologies and to provide our clients with the highest quality of service. A proven track record across 30+ projects.</p>
        <div class="profile-highlights">
          <div class="highlight"><span class="highlight-number">30+</span><span class="highlight-label">Projects</span></div>
          <div class="highlight"><span class="highlight-number">15+</span><span class="highlight-label">Clients</span></div>
          <div class="highlight"><span class="highlight-number">98%</span><span class="highlight-label">Satisfaction</span></div>
        </div>
        <a href="/about/" class="btn btn-primary">More About Us</a>
      </div>
    </div>
  </section>

  <!-- Founder -->
  <section class="founder-section">
    <div class="container founder-grid">
      <div class="founder-content">
        <span class="section-label">The Force Behind HYCE</span>
        <h2 class="section-title">A. Venugopal</h2>
        <p class="section-text">Founded HYCE in 2005 and built a reputation for strong client relationships and delivering excellence. His dedication has made him a respected figure in the construction industry.</p>
      </div>
      <div class="founder-image">
        <div class="founder-img-wrapper">
          <img src="/images/team/founder.jpg" alt="A. Venugopal - Founder" loading="lazy" />
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="cta-section">
    <div class="container cta-content">
      <h2>Ready to Start Your Project?</h2>
      <p>Let's build something extraordinary together.</p>
      <div class="cta-actions">
        <a href="/contact/" class="btn btn-white">Contact Us</a>
        <a href="tel:04048576723" class="btn btn-outline" style="border-color: white; color: white;">Call Now</a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* ===== HERO ===== */
  .hero {
    position: relative;
    height: 100vh;
    min-height: 600px;
    display: flex;
    align-items: center;
    overflow: hidden;
    background: var(--color-navy);
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(160deg, rgba(10, 14, 39, 0.92) 0%, rgba(10, 14, 39, 0.55) 100%);
    z-index: 2;
  }

  .hero-slides { position: absolute; inset: 0; z-index: 1; }
  .hero-slide { position: absolute; inset: 0; opacity: 0; transition: opacity 1.2s ease; }
  .hero-slide.active { opacity: 1; }
  .hero-bg { width: 100%; height: 100%; background-size: cover; background-position: center; background-color: var(--color-navy-light); }

  .hero-content {
    position: relative;
    z-index: 3;
    max-width: 640px;
  }

  .hero-top-line {
    width: 48px;
    height: 3px;
    background: var(--color-gold);
    margin-bottom: 24px;
  }

  .hero-badge {
    display: inline-block;
    font-size: 0.72rem;
    font-weight: 700;
    letter-spacing: 3px;
    text-transform: uppercase;
    color: var(--color-gold);
    margin-bottom: 16px;
  }

  .hero-title {
    font-size: clamp(2.4rem, 5.5vw, 4.2rem);
    color: var(--color-white);
    font-weight: 700;
    line-height: 1.05;
    margin-bottom: 20px;
  }

  .gold-text {
    color: var(--color-gold);
  }

  .hero-text {
    font-size: 0.95rem;
    color: rgba(255, 255, 255, 0.6);
    line-height: 1.7;
    margin-bottom: 28px;
    max-width: 480px;
  }

  .hero-actions {
    display: flex;
    align-items: center;
    gap: 16px;
    margin-bottom: 48px;
  }

  .hero-btn-primary {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 13px 28px;
    background: var(--color-gold);
    color: var(--color-navy);
    font-family: var(--font-body);
    font-size: 0.82rem;
    font-weight: 700;
    letter-spacing: 0.5px;
    text-transform: uppercase;
    transition: all 0.3s ease;
  }

  .hero-btn-primary svg {
    width: 16px;
    height: 16px;
    transition: transform 0.3s ease;
  }

  .hero-btn-primary:hover {
    background: var(--color-gold-light);
    transform: translateY(-2px);
  }

  .hero-btn-primary:hover svg {
    transform: translateX(4px);
  }

  .hero-btn-ghost {
    padding: 13px 24px;
    color: rgba(255, 255, 255, 0.7);
    font-family: var(--font-body);
    font-size: 0.82rem;
    font-weight: 600;
    letter-spacing: 0.5px;
    text-transform: uppercase;
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    transition: all 0.3s ease;
  }

  .hero-btn-ghost:hover {
    color: var(--color-gold);
    border-color: var(--color-gold);
  }

  .hero-stats {
    display: flex;
    align-items: center;
    gap: 24px;
  }

  .hero-stat {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .hero-stat strong {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-white);
  }

  .hero-stat span {
    font-size: 0.7rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    color: rgba(255, 255, 255, 0.4);
  }

  .hero-stat-divider {
    width: 1px;
    height: 36px;
    background: rgba(255, 255, 255, 0.12);
  }

  .hero-dots {
    position: absolute;
    bottom: 32px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 3;
    display: flex;
    gap: 8px;
  }

  .hero-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    border: none;
    background: rgba(255, 255, 255, 0.25);
    cursor: pointer;
    transition: all 0.3s ease;
    padding: 0;
  }

  .hero-dot.active {
    background: var(--color-gold);
    width: 24px;
    border-radius: 4px;
  }

  /* ===== SERVICES ===== */
  .services-overview {
    padding: var(--section-padding);
    background: var(--color-white);
  }

  .services-header {
    margin-bottom: 48px;
  }

  .services-header .section-text {
    margin: 0 auto;
  }

  .services-grid {
    display: flex;
    flex-direction: column;
    gap: 1px;
    background: var(--color-gray-200);
    border: 1px solid var(--color-gray-200);
  }

  .service-card {
    display: flex;
    align-items: center;
    gap: 20px;
    padding: 24px;
    background: var(--color-white);
    transition: all 0.3s ease;
    text-decoration: none;
    color: inherit;
  }

  .service-card:hover {
    background: var(--color-gray-100);
    padding-left: 32px;
  }

  .service-icon {
    width: 44px;
    height: 44px;
    flex-shrink: 0;
    color: var(--color-gold);
    padding: 8px;
    border: 1px solid rgba(201, 168, 76, 0.25);
    border-radius: 8px;
    transition: all 0.3s ease;
  }

  .service-card:hover .service-icon {
    background: var(--color-gold);
    color: var(--color-navy);
    border-color: var(--color-gold);
  }

  .service-icon svg {
    width: 100%;
    height: 100%;
  }

  .service-text {
    flex: 1;
    min-width: 0;
  }

  .service-text h3 {
    font-size: 1rem;
    color: var(--color-navy);
    margin-bottom: 2px;
  }

  .service-text p {
    font-size: 0.82rem;
    color: var(--color-gray-600);
    line-height: 1.4;
  }

  .service-arrow {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
    color: var(--color-gray-300);
    transition: all 0.3s ease;
  }

  .service-card:hover .service-arrow {
    color: var(--color-gold);
    transform: translateX(4px);
  }

  /* ===== COMPANY PROFILE ===== */
  .company-profile {
    padding: var(--section-padding);
    background: var(--color-gray-100);
  }

  .profile-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 64px;
    align-items: center;
  }

  .profile-image { position: relative; }

  .profile-img-wrapper {
    width: 100%;
    aspect-ratio: 4/3;
    overflow: hidden;
    background: var(--color-gray-200);
  }

  .profile-img-wrapper img { width: 100%; height: 100%; object-fit: cover; }

  .profile-exp {
    position: absolute;
    bottom: -20px;
    right: -20px;
    background: var(--color-gold);
    color: var(--color-navy);
    padding: 20px;
    text-align: center;
  }

  .exp-number { display: block; font-family: var(--font-heading); font-size: 2rem; font-weight: 700; line-height: 1; }
  .exp-text { display: block; font-size: 0.7rem; font-weight: 700; text-transform: uppercase; letter-spacing: 1px; margin-top: 2px; }

  .profile-highlights {
    display: flex;
    gap: 28px;
    margin: 28px 0;
  }

  .highlight { text-align: center; }
  .highlight-number { display: block; font-family: var(--font-heading); font-size: 1.8rem; font-weight: 700; color: var(--color-gold); }
  .highlight-label { display: block; font-size: 0.72rem; color: var(--color-gray-600); margin-top: 2px; text-transform: uppercase; letter-spacing: 1px; }

  /* ===== FOUNDER ===== */
  .founder-section {
    padding: var(--section-padding);
    background: var(--color-navy);
  }

  .founder-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 64px;
    align-items: center;
  }

  .founder-content .section-title { color: var(--color-white); }
  .founder-content .section-text { color: rgba(255, 255, 255, 0.55); }

  .founder-img-wrapper {
    width: 100%;
    aspect-ratio: 3/4;
    overflow: hidden;
  }

  .founder-img-wrapper img { width: 100%; height: 100%; object-fit: cover; object-position: top center; }

  /* ===== CTA ===== */
  .cta-section {
    padding: 72px 0;
    background: linear-gradient(135deg, var(--color-gold-dark) 0%, var(--color-gold) 100%);
    text-align: center;
  }

  .cta-content h2 { font-size: clamp(1.5rem, 3.5vw, 2.2rem); color: var(--color-navy); margin-bottom: 12px; }
  .cta-content p { font-size: 0.95rem; color: rgba(10, 14, 39, 0.6); margin-bottom: 28px; }
  .cta-actions { display: flex; gap: 12px; justify-content: center; flex-wrap: wrap; }

  /* ===== RESPONSIVE ===== */
  @media (max-width: 1024px) {
    .hero { min-height: 560px; }
    .profile-grid, .founder-grid { gap: 40px; }
    .profile-exp { bottom: -12px; right: -12px; padding: 16px; }
    .exp-number { font-size: 1.6rem; }
  }

  @media (max-width: 768px) {
    .hero {
      height: auto;
      min-height: auto;
      padding: 90px 0 40px;
    }

    .hero-overlay {
      background: linear-gradient(180deg, rgba(10, 14, 39, 0.88) 0%, rgba(10, 14, 39, 0.7) 100%);
    }

    .hero-top-line { width: 32px; height: 2px; margin-bottom: 16px; }
    .hero-badge { font-size: 0.6rem; letter-spacing: 2.5px; margin-bottom: 12px; }

    .hero-title {
      font-size: 2rem;
      margin-bottom: 14px;
    }

    .hero-text {
      font-size: 0.82rem;
      line-height: 1.6;
      margin-bottom: 20px;
      color: rgba(255, 255, 255, 0.5);
    }

    .hero-actions {
      gap: 12px;
      margin-bottom: 32px;
    }

    .hero-btn-primary {
      padding: 11px 20px;
      font-size: 0.72rem;
    }

    .hero-btn-primary svg { width: 14px; height: 14px; }

    .hero-btn-ghost {
      padding: 11px 16px;
      font-size: 0.72rem;
    }

    .hero-stats { gap: 16px; }
    .hero-stat strong { font-size: 1.2rem; }
    .hero-stat span { font-size: 0.6rem; letter-spacing: 1px; }
    .hero-stat-divider { height: 28px; }

    .hero-dots { bottom: 16px; }

    .services-overview { padding: 40px 0; }
    .services-header { margin-bottom: 24px; }

    .services-grid {
      border-radius: 12px;
      overflow: hidden;
    }

    .service-card { padding: 16px; gap: 14px; }
    .service-card:hover { padding-left: 16px; }
    .service-icon { width: 36px; height: 36px; padding: 6px; border-radius: 6px; }
    .service-text h3 { font-size: 0.88rem; }
    .service-text p { font-size: 0.75rem; }
    .service-arrow { display: none; }

    .company-profile { padding: 40px 0; }
    .profile-grid, .founder-grid { grid-template-columns: 1fr; gap: 24px; }

    .profile-img-wrapper { aspect-ratio: 16/9; border-radius: 8px; overflow: hidden; }

    .profile-exp {
      position: static;
      display: inline-flex;
      align-items: center;
      gap: 8px;
      margin-top: 12px;
      padding: 10px 16px;
    }

    .exp-number { font-size: 1.3rem; }
    .exp-text { font-size: 0.65rem; margin-top: 0; }

    .profile-highlights { gap: 16px; margin: 20px 0; }
    .highlight-number { font-size: 1.4rem; }
    .highlight-label { font-size: 0.6rem; }

    .founder-section { padding: 40px 0; }

    .founder-img-wrapper {
      aspect-ratio: 1/1;
      max-width: 180px;
      margin: 0 auto;
      border-radius: 50%;
    }

    .founder-content .section-text { font-size: 0.82rem; }

    .cta-section { padding: 36px 0; }
    .cta-content h2 { font-size: 1.3rem; }
    .cta-content p { font-size: 0.82rem; margin-bottom: 20px; }
    .cta-actions { flex-direction: column; align-items: stretch; }
  }

  @media (max-width: 480px) {
    .hero { padding: 80px 0 32px; }
    .hero-title { font-size: 1.7rem; }
    .hero-text { font-size: 0.78rem; }

    .hero-stats { gap: 12px; }
    .hero-stat strong { font-size: 1.05rem; }
    .hero-stat span { font-size: 0.55rem; }
    .hero-stat-divider { height: 24px; }

    .service-card { padding: 14px; gap: 12px; }
    .service-icon { width: 32px; height: 32px; padding: 5px; }
    .service-text h3 { font-size: 0.82rem; }
    .service-text p { display: none; }

    .founder-img-wrapper { max-width: 150px; }
  }
</style>

<script>
  let currentSlide = 0;
  const slides = document.querySelectorAll('.hero-slide');
  const dots = document.querySelectorAll('.hero-dot');

  function goToSlide(index: number) {
    slides.forEach(s => s.classList.remove('active'));
    dots.forEach(d => d.classList.remove('active'));
    slides[index]?.classList.add('active');
    dots[index]?.classList.add('active');
    currentSlide = index;
  }

  dots.forEach(dot => {
    dot.addEventListener('click', () => {
      goToSlide(Number(dot.getAttribute('data-slide')));
    });
  });

  setInterval(() => {
    goToSlide((currentSlide + 1) % slides.length);
  }, 5000);
</script>
